{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "MinGW Debug vsc-cpp",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "vsc-cpp/main.cpp",
                "vsc-cpp/add.cpp",
                "vsc-cpp/sub.cpp",
                "-o",
                "vsc-cpp/vsc-cpp.exe"
            ]
        },
        {
            "type": "shell",
            "label": "gcc.exe build active file",
            "command": "C:/MinGW/bin/gcc.exe",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "C:/MinGW/bin"
            }
        }
    ]
}